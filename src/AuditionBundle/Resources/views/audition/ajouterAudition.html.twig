{% extends 'base.html.twig' %}

{% block Body %}
    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/bg-img/breadcumb3.jpg') }});">

    </section>
    <section class="contact-area section-padding-0-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-heading">
                        <p>See what’s new</p>
                        <h2>Get In Touch</h2>
                    </div>
                </div>
            </div>
            <div class="row" style="align-content: center">
                <div class="col-12" >

                    <!-- Contact Form Area -->
                    <div class="contact-form-area">

                        {{ form_start(form) }}
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.nom,'Nom') }}
                            {{ form_widget(form.nom,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.date,'Date') }}
                            {{ form_widget(form.date,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.description,'Description') }}
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.video,'Video') }}
                            {{ form_widget(form.video,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.categorie,'Catégorie') }}
                            {{ form_widget(form.categorie,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.photo,'Photo') }}
                            {{ form_widget(form.photo,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <div class="col-md-6 col-lg-4">
                            {{ form_label(form.Confirm,'Confirm') }}
                            {{ form_widget(form.Confirm,{'attr':{'class':'form-control'}} ) }}
                        </div>
                        <input class="btn oneMusic-btn mt-30" type="submit" value="Submit" />

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


