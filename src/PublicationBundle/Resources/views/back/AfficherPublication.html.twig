{% extends 'default/index.html.twig' %}

{% block content %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <div class="content-wrapper">

        <section class="content">
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Liste Publication</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header-->
                    <div class="card-body table-responsive p-0" style="height: 300px;">
                        <input class="form-control" id="myInput" type="text" placeholder="Search..">

                        <table class="table table-head-fixed text-nowrap">
                            <th>publication</th>
                            <th>description</th>
                            <th>date d'ajout</th>
                            <th></th>
                            <tbody id="myTable">
                            {% for publication in publications %}
                            <tr>


                                <td>
                                    <img src="{{ asset('uploads/photos/'~publication.photo) }}" width="100" height="100">
                                </td>

                                <td>
                                    {{ publication.description }}
                                </td>
                                <td>
                                    <p class="post-author">{{ publication.date|date('d-m-Y') }}</p>
                                </td>
                                <td>
                                    <a class="btn btn-danger" href="{{ path('delete_publication',{'id':publication.id})}}">Delete</a>
                                    <a class="btn btn-danger" href="{{ path('liste_commentaire',{'id':publication.id})}}">DÃ©tails</a>

                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
        </section>
        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>

    </div>
{% endblock %}