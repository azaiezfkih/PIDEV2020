{% extends 'base.html.twig' %}
{% block Body %}

    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/bg-img/breadcumb3.jpg') }});">

    </section>
    <section class="login-area section-padding-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <div class="login-content">
                        <h3>Welcome</h3>
                        <!-- Login Form -->
                        <div class="login-form">
    <h1>Message</h1>

    <table>
        <tbody>
            <tr>
                <th>Idm</th>
                <td>{{ message.idM }}</td>
            </tr>
            <tr>
                <th>Idsender</th>
                <td>{{ message.idSender }}</td>
            </tr>
            <tr>
                <th>Idreciver</th>
                <td>{{ message.idReciver }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{% if message.visible %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('message_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('message_edit', { 'idM': message.idM }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
    </div>
    </div>
    </div>
    </div>
    </div>
    </section>

{% endblock %}
