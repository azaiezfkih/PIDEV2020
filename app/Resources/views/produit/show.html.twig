{% extends 'base.html.twig' %}

{% block Body %}
    <section class="breadcumb-area bg-img bg-overlay" style="background-image: url({{ asset('img/bg-img/blog1.jpg') }});">

    </section>

    <section class="featured-artist-area section-padding-100 bg-img bg-overlay bg-fixed" style="background-image: url({{ asset('img/bg-img/bg-4.jpg') }});">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-12 col-md-5 col-lg-4">
                    <div class="featured-artist-thumb">
                        <img src="{{asset('/img/'~produit.image)}}" alt="">
                    </div>
                </div>
                <div class="col-12 col-md-7 col-lg-8">
                    <div class="featured-artist-content">

                        <div class="section-heading white text-left mb-30">
                            <p>Nb vente:{{ produit.nbVente }}</p>
                            <h2>Nom:{{ produit.nom }}</h2>
                        </div>
                        <p>Desc:{{ produit.description }}</p>
                        <p>Prix{{ produit.prix }}dt</p>
                        <p>Categorie:{{ produit.categorie }}</p>
                        <div class="hero-slides-content text-center">
                            <a data-animation="fadeInUp" data-delay="500ms" href="{{ path('commande_detail_new',{ 'nom': produit.nom ,'prix':produit.prix,'prod':produit.id})}} }}" class="btn oneMusic-btn mt-50">buy <i class="fa fa-angle-double-right"></i></a>
                        </div>
                    </div>
                </div>
                <a href="{{ path('produit_index') }}">Back to the list</a>
            </div>
        </div>
    </section>

{% endblock %}
