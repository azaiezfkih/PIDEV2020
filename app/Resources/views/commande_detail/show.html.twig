{% extends 'default/index.html.twig' %}

{% block content %}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Les reclamations</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body table-responsive p-0" style="height: 300px;">
                    <h1>Commande_detail</h1>

                    <table>
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ commande_detail.id }}</td>
                        </tr>
                        <tr>
                            <th>Qteprod</th>
                            <td>{{ commande_detail.qteProd }}</td>
                        </tr>
                        <tr>
                            <th>Prixprod</th>
                            <td>{{ commande_detail.prixProd }}</td>
                        </tr>
                        <tr>
                            <th>Prixprod</th>
                            <td>{{ commande_detail.idProd }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <ul>
                        <li>
                            <a href="{{ path('commande_detail_index') }}">Back to the list</a>
                        </li>
                        <li>
                            <a href="{{ path('commande_detail_edit', { 'id': commande_detail.id }) }}">Edit</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                            {{ form_end(delete_form) }}
                        </li>
                    </ul>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </div>
    </section>
</div>
{% endblock %}
